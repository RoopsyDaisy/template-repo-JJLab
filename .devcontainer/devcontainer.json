{
  "name": "${localWorkspaceFolderBasename}",

  "build": { "dockerfile": "../Dockerfile", "context": ".." },

  "runArgs": [
    "--device=nvidia.com/gpu=all",
    "--security-opt", "label=disable",
    "--userns=keep-id"
  ],
  "remoteUser": "vscode",

  "mounts": [
    // Uncomment and customize for data mounts:
    // "source=/path/to/data,target=/data,type=bind,consistency=cached,readonly=false"
  ],

  "postCreateCommand": "uv sync && uv run python scripts/check_env.py",
  "postStartCommand": "uv sync --quiet",

  "customizations": {
    "vscode": {
      "settings": {
        // Python interpreter (uv creates .venv)
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.locator": "native",

        // Jupyter Interactive Window
        "python.dataScience.sendSelectionToInteractiveWindow": true,
        "jupyter.interactiveWindow.mode": "perFile",

        // Terminal defaults
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "/bin/bash" }
        },

        // Formatting (black 88 chars, ruff for linting)
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.rulers": [88]
        }
      },
      "extensions": [
        // Core Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",

        // Jupyter
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",

        // Utilities
        "mechatroner.rainbow-csv",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",

        // Git
        "eamodio.gitlens"
      ]
    }
  }
}
